<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clPuntuacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9E0AE"
    tools:context=".view.fragment.MostrarPuntuacionFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMostrarPuntuacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="100dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFC876">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btVolverJugarJuegoPuntuacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="92dp"
                android:layout_marginTop="60dp"
                android:clickable="true"
                android:src="@drawable/ic_action_volverajugar"
                app:backgroundTint="#0E97FF"
                app:layout_constraintEnd_toEndOf="@+id/tvPuntuacionJugador"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPuntuacionJugador"
                app:rippleColor="#682C0E" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btSalirJuegoPuntuacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="92dp"
                android:clickable="true"
                android:src="@drawable/ic_action_clear"
                app:backgroundTint="#FF0000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPuntuacionTotal"
                app:rippleColor="#682C0E" />

            <TextView
                android:id="@+id/tvPuntuacionTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="1"
                android:textColor="#682C0E"
                android:textSize="70sp"
                app:layout_constraintStart_toEndOf="@+id/textView8"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/tvTextoPuntuacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:text="TextView"
                android:textColor="#682C0E"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-smallcaps"
                android:text="/"
                android:textColor="#682C0E"
                android:textSize="70sp"
                app:layout_constraintStart_toEndOf="@+id/tvPuntuacionJugador"
                app:layout_constraintTop_toTopOf="@+id/tvPuntuacionJugador" />

            <TextView
                android:id="@+id/tvPuntuacionJugador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="128dp"
                android:layout_marginTop="80dp"
                android:fontFamily="sans-serif-smallcaps"
                android:shadowColor="#000000"
                android:text="1"
                android:textColor="#682C0E"
                android:textSize="70sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTextoPuntuacion" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>